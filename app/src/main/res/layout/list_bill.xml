<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xmedium"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout android:gravity="center_horizontal"
                          android:layout_width="35dp" android:layout_height="match_parent">

                <CheckBox android:id="@+id/cb_sel"
                          android:layout_marginTop="@dimen/spacing_medium"
                          android:layout_marginLeft="@dimen/spacing_medium"
                          android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_middle"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/lbl_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPP - Jul 2019"
                        android:textSize="16dp"
                        android:textColor="@color/grey_90"/>

                <TextView
                        android:id="@+id/txt_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jatuh tempo 10 Juli 2019"
                        android:textSize="12dp"
                        android:textColor="@color/grey_60"/>

                <TextView
                        android:id="@+id/lbl_amount"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 550.000"
                        android:textSize="14dp"
                        android:textColor="@color/grey_60"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>