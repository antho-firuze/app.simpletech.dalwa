<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth_activity.RegisterActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/Base.Widget.AppCompat.PopupMenu"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?android:attr/actionBarSize">

        <TextView android:id="@+id/tv_content"
                  android:gravity="center"
                  android:textSize="22sp"
                  android:text="Histori Transaksi"
                  android:textColor="@android:color/white"
                  android:fontFamily="@font/avenirnextltpromedium"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:visibility="visible"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                <LinearLayout android:orientation="vertical"
                              android:padding="@dimen/spacing_mlarge"
                              android:layout_width="match_parent" android:layout_height="wrap_content">


                    <LinearLayout
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Status"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/lbl_payment_status"
                                android:text="Sudah Dibayar"
                                android:textAlignment="textEnd"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Tanggal Tagihan"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/lbl_created_at"
                                android:textAlignment="textEnd"
                                android:text="10 Juli 2019 19:05 WIB"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="No Tagihan"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/lbl_payment_no"
                                android:text="PAYPP201908000028"
                                android:textAlignment="textEnd"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Total Pembayaran"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:textColor="@color/red"
                                  android:id="@+id/lbl_total"
                                  android:textAlignment="textEnd"
                                  android:text="Rp0"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Tanggal Pembayaran"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/lbl_payed_at"
                                android:textAlignment="textEnd"
                                android:text="10 Juli 2019 19:05 WIB"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:visibility="visible"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                <LinearLayout android:orientation="vertical"
                              android:padding="@dimen/spacing_large"
                              android:layout_width="match_parent" android:layout_height="wrap_content">

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView
                                android:text="Informasi Siswa"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Nama"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:id="@+id/lbl_name"
                                  android:text="Kayyis Ahmad Alghiffari"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="No. Induk Siswa"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:id="@+id/lbl_nis"
                                  android:text="0123456789"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:visibility="visible"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                <LinearLayout android:orientation="vertical"
                              android:padding="@dimen/spacing_mlarge"
                              android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView android:id="@+id/lbl_detail"
                              android:text="Detail Pembayaran"
                              style="@style/TextAppearance.AppCompat.Title"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycleView"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <LinearLayout android:id="@+id/lbl_bill_empty"
                                  android:visibility="gone"
                                  android:layout_weight="1"
                                  android:gravity="center"
                                  android:layout_width="match_parent" android:layout_height="match_parent">

                        <TextView
                                android:text="Tidak ada detail pembayaran !"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:visibility="visible"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                <LinearLayout android:orientation="vertical"
                              android:padding="@dimen/spacing_large"
                              android:layout_width="match_parent" android:layout_height="wrap_content">

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView
                                android:text="Informasi Pembayaran"
                                style="@style/TextAppearance.AppCompat.Title"
                                android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Metode Pembayaran"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:text="BCA Virtual Account"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_5"/>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Sub Total"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:id="@+id/lbl_sub_total"
                                android:text="Rp500.000"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_marginBottom="@dimen/spacing_middle"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Biaya Admin"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:id="@+id/lbl_admin_charge"
                                android:text="Rp7.500"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                            android:layout_marginBottom="@dimen/spacing_middle"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_5"/>

                    <LinearLayout android:orientation="horizontal"
                                  android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:text="Total Pembayaran"
                                  android:layout_weight="1"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

                        <TextView android:id="@+id/lbl_grand_total"
                                android:text="Rp507.500"
                                  android:textStyle="bold"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/spacing_large"
                          android:layout_marginBottom="@dimen/spacing_xmlarge"
                          android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                        android:text="Untuk bantuan silahkan klik"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:id="@+id/lbl_help"
                        android:text=" disini"
                        android:textColor="@color/blue_400"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>