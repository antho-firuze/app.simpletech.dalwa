<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView android:text="Harga/Unit"
                  android:layout_marginTop="10dp"
                  android:gravity="center_horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <LinearLayout android:gravity="center_horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView android:id="@+id/tv_curr"
                      android:text="IDR"
                      android:paddingTop="6dp"
                      android:paddingRight="6dp"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"/>

            <TextView android:id="@+id/tv_price_unit"
                      android:text="1,271.23"
                      android:textStyle="bold"
                      android:textSize="30dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:paddingTop="20sp"
                      android:paddingLeft="20sp"
                      android:paddingRight="20sp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <LinearLayout android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView android:text="6 Bln"
                          android:gravity="center_horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_gravity="center_horizontal"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">

                    <TextView android:id="@+id/tv_6bln"
                              android:text="3.47"
                              android:textSize="24dp"
                              android:textStyle="bold"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                    <TextView android:text="%"
                              android:paddingTop="4dp"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView android:text="1 Thn"
                          android:gravity="center_horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_gravity="center_horizontal"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">

                    <TextView android:id="@+id/tv_1thn"
                              android:text="6.43"
                              android:textSize="24dp"
                              android:textStyle="bold"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                    <TextView android:text="%"
                              android:paddingTop="4dp"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView android:text="3 Thn"
                          android:gravity="center_horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_gravity="center_horizontal"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">

                    <TextView android:id="@+id/tv_3thn"
                              android:text="20.21"
                              android:textSize="24dp"
                              android:textStyle="bold"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                    <TextView android:text="%"
                              android:paddingTop="4dp"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <TextView android:text="5 Thn"
                          android:gravity="center_horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_gravity="center_horizontal"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">

                    <TextView android:id="@+id/tv_5thn"
                              android:text="-"
                              android:textSize="24dp"
                              android:textStyle="bold"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>

                    <TextView android:text="%"
                              android:paddingTop="4dp"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
                      android:layout_marginTop="18dp"
                      android:paddingLeft="8dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <RadioGroup android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <RadioButton android:text="NAV/Unit     "
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <RadioButton android:text="Percentage (%)"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

            </RadioGroup>
            <RadioGroup android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                <RadioButton android:text="Sejak Awal  "
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <RadioButton android:text="1 Tahun    "
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <RadioButton android:text="Sejak Awal Tahun"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

            </RadioGroup>

        </LinearLayout>

        <ImageView android:src="@drawable/chart_performance"
                   android:layout_margin="10dp"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>