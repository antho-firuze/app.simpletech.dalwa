<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xmedium"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

        <LinearLayout
                android:id="@+id/layout_item"
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/layout_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_medium"
                    android:paddingLeft="@dimen/spacing_xsmall"
                    android:paddingRight="@dimen/spacing_xsmall"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:background="@color/grey_300"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/lbl_payment_status"
                        android:text="Belum Dibayar"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <LinearLayout android:orientation="vertical"
                              android:background="@color/WhiteSmoke"
                              android:padding="@dimen/spacing_medium"
                              android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/lbl_created_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 Juli 2019 19:05:00"
                            android:textSize="12dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_60"/>

                    <TextView
                            android:id="@+id/lbl_payment_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAYPP201908000028"
                            android:textSize="16dp"
                            android:textColor="@color/grey_90"/>

                    <TextView
                            android:id="@+id/lbl_grand_total"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 550.000"
                            android:textSize="14dp"
                            android:textColor="@color/red_600"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>